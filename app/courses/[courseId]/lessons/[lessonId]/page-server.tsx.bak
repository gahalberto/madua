import { getCommentsByLessonId } from '@/app/actions/comments';
import { LessonPageClient } from './lesson-client';

export default async function LessonPage({
  params,
}: {
  params: { courseId: string; lessonId: string };
}) {
  // Buscar coment√°rios do servidor
  const comments = await getCommentsByLessonId(params.lessonId);

  return <LessonPageClient params={params} initialComments={comments} />;
}
