// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  USER
}

enum Gender {
  MALE
  FEMALE
  PREFER_NOT_TO_SAY
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  INACTIVE
}

enum ContentType {
  COURSE    // Treinamento estruturado
  VLOG      // Conteúdo estilo YouTube Premium
  WORKSHOP  // Gravações de lives
}

enum Archetype {
  KING      // Ordem, planejamento e presença
  WARRIOR   // Atividades físicas e disciplina
  MAGE      // Produção técnica, estudo e foco
}

// User model - Gestão de utilizadores
model User {
  id                 String             @id @default(cuid())
  email              String             @unique
  name               String?
  password           String?
  image              String?
  phone              String?
  birthDate          DateTime?
  gender             Gender?
  role               UserRole           @default(USER)
  stripeCustomerId   String?            @unique
  subscriptionStatus SubscriptionStatus @default(INACTIVE)
  emailVerified      DateTime?
  accounts           Account[]
  sessions           Session[]
  progress           Progress[]
  comments           Comment[]
  quoteLikes         QuoteLike[]
  purchases          Purchase[]
  routineTasks       RoutineTask[]
  notifications      Notification[]
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  @@index([email])
  @@index([subscriptionStatus])
}

// NextAuth Account model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// NextAuth Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// NextAuth VerificationToken model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Course model - Cursos da plataforma
model Course {
  id          String      @id @default(cuid())
  title       String
  description String?     @db.Text
  thumbnail   String?
  category    String?     // Ex: "Dieta da Selva", "Protontropia", "Neantropia"
  type         ContentType @default(COURSE)
  isPublished  Boolean     @default(false)
  isPremium    Boolean     @default(true) // Conteúdo grátis vs pago
  isInClub     Boolean     @default(true) // Se true, membros do clube têm acesso
  isStandalone Boolean     @default(false) // Se true, pode ser comprado individualmente
  price        Float? // Preço para compra individual (em EUR/USD)
  modules      Module[]
  purchases    Purchase[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([category])
  @@index([type])
  @@index([isPublished])
  @@index([isPremium])
  @@index([isInClub])
  @@index([isStandalone])
}

// Module model - Módulos de um curso
model Module {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  order       Int
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons     Lesson[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([courseId, order])
  @@index([courseId])
}

// Lesson model - Aulas de um módulo
model Lesson {
  id          String     @id @default(cuid())
  title       String
  description String?    @db.Text
  videoUrl    String
  duration    Int?       // Duração em segundos
  order       Int
  isFree      Boolean    @default(false)
  moduleId    String
  module      Module     @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  comments    Comment[]
  progress    Progress[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([moduleId, order])
  @@index([moduleId])
}

// Progress model - Progresso do utilizador
model Progress {
  id          String   @id @default(cuid())
  userId      String
  lessonId    String
  isCompleted Boolean  @default(false)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson      Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, lessonId])
  @@index([userId])
  @@index([lessonId])
}

// Comment model - Comentários nas aulas
model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  userId    String
  lessonId  String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([lessonId])
  @@index([userId])
  @@index([createdAt])
}

// QuoteLike model - Likes nas frases
model QuoteLike {
  id        String     @id @default(cuid())
  userId    String
  quoteId   String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  quote     StoicQuote @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now())

  @@unique([userId, quoteId])
  @@index([userId])
  @@index([quoteId])
}

// StoicQuote model - Sabedoria Ancestral
model StoicQuote {
  id        String      @id @default(cuid())
  text      String      @unique
  likes     QuoteLike[]
  createdAt DateTime    @default(now())
}

// Purchase model - Compras individuais de cursos
model Purchase {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  amount    Float    // Valor pago
  currency  String   @default("EUR") // Moeda
  status    String   @default("completed") // completed, refunded, etc
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
  @@index([status])
}

// Post model - Blog e Receitas com foco em SEO
model Post {
  id              String    @id @default(cuid())
  title           String
  slug            String    @unique
  excerpt         String?   // Resumo para Google Search
  content         String    @db.Text // Markdown/HTML
  image           String?
  categoryId      String?
  category        Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  
  // SEO Fields
  metaTitle       String?
  metaDescription String?
  
  // Controle de acesso
  isPublished     Boolean   @default(false)
  isPremium       Boolean   @default(false) // Requer autenticação/assinatura
  
  // Relação opcional com receita
  recipe          Recipe?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([slug])
  @@index([categoryId])
  @@index([isPublished])
  @@index([isPremium])
}

// Category model - Categorias de receitas
model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  color       String?  // Cor hexadecimal para UI
  icon        String?  // Nome do ícone ou emoji
  order       Int      @default(0) // Ordem de exibição
  posts       Post[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([order])
}

// Recipe model - Detalhes de receitas (opcional para posts)
model Recipe {
  id          String   @id @default(cuid())
  postId      String   @unique
  post        Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  prepTime    Int?     // Minutos
  cookTime    Int?     // Minutos
  servings    Int?     // Porções
  difficulty  String?  // "Fácil", "Média", "Difícil"
  
  // Ingredientes e instruções em JSON
  ingredients String   @db.Text // JSON array: [{name, quantity, unit}]
  instructions String  @db.Text // JSON array: [step1, step2, ...]
  
  // Informação nutricional (opcional)
  calories    Int?
  protein     Float?
  carbs       Float?
  fats        Float?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// RoutineTask model - Gestão de Rotina Gamificada (Arquétipos)
model RoutineTask {
  id            String     @id @default(cuid())
  title         String
  description   String?    @db.Text
  archetype     Archetype  // KING, WARRIOR, MAGE
  beforeRitual  String?    @db.Text // Ritual de preparação
  afterRitual   String?    @db.Text // Ritual de fechamento
  points        Int        @default(10) // Pontos que a tarefa vale
  order         Int        @default(0) // Ordem de exibição
  completedAt   DateTime? // Quando foi completada
  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([userId])
  @@index([archetype])
  @@index([completedAt])
}

// Notification model - Sistema de Notificações
model Notification {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  message     String   @db.Text
  type        String   // "POST", "LESSON", "RECIPE", "SYSTEM"
  link        String?  // URL para onde a notificação deve redirecionar
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
}
